    <body>
      <div id="pricing-table" class="clear">
    	<% @products.each do  |product|%>
        <div class="plan">
            <h3><%= product.name%><span><%= image_tag product.avatar.url , :size => "100x105"%></span></h3>
            <%=link_to "view", product_path(product),class: 'signup'  %>  
            <ul>
                <li><b>10 days</b> Replacement Policy</li>
                <li><b><%= product.price%></b> Price</li>
                <li><b><%= product.email%></b> Email</li>
                <li><b>10%</b> Discount</li>
                <li><b><%= product.description%></b> Description</li>
                <td><%= link_to(image_tag("https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif"), product.paypal_url(product))%></td>
                <!-- <li><b><img id="myImage" onclick="changeImage()" src="/assets/1.png" width="50" height="50"></li> -->
            </ul> 
        </div>
        <%end%>
